{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext"],
    "downlevelIteration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src", "test"],
  "exclude": ["test/__file_snapshots__"]
}
